<style>
    body {
        background-image: url("https://bloximages.chicago2.vip.townnews.com/tucson.com/content/tncms/assets/v3/editorial/5/cf/5cf9f4f4-df43-11e6-b516-f70c5301ad37/58825f65b213c.image.jpg");
    }
    .jumbotron {
        text-align: left;
        background-image: url("https://pbs.twimg.com/profile_images/1072853966516613131/KVJhkaf8.jpg");
        background-color:white;
        color: navy;
        background-repeat: no-repeat;
        background-size: 300px;
        background-position: right;

    }
    a {
        font-size: 30px;
    }
    a:hover {
        text-decoration: none;
    }
    .nav-item {
        display: inline-block!important;
        color: white!important;
    }
    .nav-item:hover {
        color: bisque!important;
    }
    #navbarButtonDelete {
        font-size: 15px!important;
    }
    #navbarButton, #navbarButtonDelete, #scrapeNewButton {
      color: black!important;
      font-size: 20px!important;
    }
    #navbarButton:hover, #navbarButtonDelete:hover, #scrapeNewButton:hover {
      color: blue!important;
    }
    
</style>

<div class="jumbotron">

    <h1>Index Scraping</h1>
    <h4>Articles from the Hungarian website "www.index.hu"</h4>
    <a class="nav-item nav-link active" id="navbarButton" href="/">Home <span class="sr-only">(current)</span></a>
    <a class="nav-item nav-link" id="navbarButtonDelete" href="/items/delete/{{_id}}">Clear Articles</a>
    <a class="nav-item nav-link" id="scrapeNewButton" href="#">Scrape new articles</a>
    <a class="nav-item nav-link" id="navbarButton" href="/saved">Saved Articles</a>
</div>
{{#each articles}}
<a href={{this.link}}>{{this.title}}</a>
<!-- <h5>Link: {{this.link}}</h5>
<p>id: {{this.id}}</p> -->
<p>{{this.p.span}}</p>
<button type="button" class="btn btn-primary saveArticle" data-id="{{this._id}}">Save article</button>
<hr>
{{/each}}
